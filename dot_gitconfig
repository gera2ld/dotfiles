[init]
	defaultBranch = main

# Common config is moved to `~/.config` so that it is only included on the host, but not devcontainers
[include]
	path = .config/git/conf.d/common.conf
	path = .config/git/conf.d/local.conf # optional

[includeIf "gitdir:~/Work/"]
	path = .config/git/conf.d/work.conf # optional
